<% form_for(@yeast_strain) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </p>
  <p>
    <%= f.label :alias %><br />
    <%= f.text_field :alias %>
  </p>
  <p>
    <%= f.label  :mating_type %><br />
    <%= f.select :mating_type,
                 YeastStrain::MAT_TYPES
    %>
  </p>
  <p>
    <%= f.label :genotype %><br />
    <%= f.text_area :genotype %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.label :freeze_date %><br />
    <%= f.date_select :freeze_date %>
  </p>
  <p>
    <%= f.label :background %><br />
    <%= f.text_field :background %>
  </p>
  <p>
    <%= f.submit action %>
  </p>
<% end %>
