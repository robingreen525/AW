<% form_for(@oligo) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :number %><br />
    <%= f.text_field :number, :size => 3 %>
  </p>
  <p>
    <%= f.label :sequence %><br />
    <%= f.text_field :sequence %>
  </p>
  <p>
    <%= f.label :direction %><br />
    <%= f.text_field :direction, :size => 1 %>
  </p>
  <p>
    <%= f.label :target %><br />
    <%= f.text_area :target, :rows => 4 %>
  </p>
  <p>
    <%= f.label :plasmid %><br />
    <%= f.text_field :plasmid %>
  </p>
  <p>
    <%= f.submit action %>
  </p>
<% end %>
</div>
