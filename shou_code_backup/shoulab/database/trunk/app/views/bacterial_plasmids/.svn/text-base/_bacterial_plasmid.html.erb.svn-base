<% form_for(@bacterial_plasmid, :html=>{:multipart=>true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </p>
  <p>
    <%= f.label :background %><br />
    <%= f.text_field :background %>
  </p>
  <p>
    <%= f.label :drug_resistance %><br />
    <%= f.text_field :drug_resistance %>
  </p>
  <p>
